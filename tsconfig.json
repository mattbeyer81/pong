{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "DOM"],
        "types": ["reflect-metadata", "jest"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "outDir": "build",
        "allowJs": true
